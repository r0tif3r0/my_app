.container
  .auth-form
    .form-header
      %h2= t('.sign_in')

    = form_with(url: signin_path, scope: :session) do |f|
      .form-group
        = f.label :email, t('.email'), class: 'form-label'
        = f.email_field :email, class: 'form-input', required: true

      .form-group
        = f.label :password, t('.password'), class: 'form-label'
        = f.password_field :password, class: 'form-input', required: true

      .form-group.remember-me
        = f.check_box :remember_me
        = f.label :remember_me, t('.remember_me')

      .form-actions
        = f.submit t('.sign_in'), class: 'form-submit-btn'

    .auth-links
      = link_to t('.sign_up'), signup_path